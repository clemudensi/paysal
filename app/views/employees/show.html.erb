<!DOCTYPE html>
<html>
  <head>
    <title>Payroll App</title>
    <%= csrf_meta_tags %>
   
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <div class="container">
	  	<div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

		</div>      <!-- /modal-header -->
	    <div class="modal-body">
				<%= image_tag @employee.image.url(:medium), alt: "" %>
				<h1><%= @employee.first_name %> <%= @employee.last_name %> </h1>
				<p>First name: <%= @employee.first_name %></p>
				<p>Last name: <%= @employee.last_name %></p>
				<p>Middle name: <%= @employee.middle_name %></p>
				<p>Gender: <%= @employee.gender %></p>
				<p>Bank account: <%= @employee.bank_account_id %></p>
				<p>Employee status: <%= @employee.employee_id %></p>
				<p>Date of Birth: <%= @employee.date_of_birth %></p>
				<p>Job title: <%= @employee.job_title %></p>
				<p>Date Joined: <%= @employee.date_joined_company %></p>
				<p>Residential Address: <%= @employee.residential_address %></p>

				<%= link_to 'Edit', edit_organization_employee_path %> |
				<%= link_to 'Back', organization_path(@organization) %> |
				<%= link_to 'Delete', organization_employee_path, method: :delete, data: {confirm: 'Are you sure you want to delete?'} %>
			</div>      <!-- /modal-body -->
	    <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	    </div>   
		</div>
 	</body>
</html>

